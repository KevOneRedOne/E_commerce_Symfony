{% extends 'base.html.twig' %}

{% block title %}Add Product{% endblock %}

{% block body %}
    <br>
    <h1 class="text-center">Vendre un produit</h1>
    <br>

    {{ form_start(addProduct) }}
        {{form_row(addProduct.NAME, {
            label:'Titre du produit'
        })}}
        {{form_row(addProduct.DESCRIPTION, {
            label:'Description du produit'
        })}}
        {{ form_row(addProduct.PRICE, {
            label: 'Prix'
        }) }}
        <img src="{{ asset('images/product/' ~ addProduct.imageFile ) }}" alt="" class="col-md-12">
        <br>
        <div class="text-center">
            <button type="submit" class="btn btn-lg btn-primary btn-block">Ajouter le produit</button>
        </div>
       
    {{ form_end(addProduct) }}
{% endblock %}