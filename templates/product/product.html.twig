{% extends "base.html.twig" %}

{% block title %} Liste des Produits {% endblock %}

{% block body %}

    <h1 class="text-center my-4">Liste des Produits</h1>
    {% for message in app.flashes('success') %}
		<div class="alert alert-success text-center">{{ message }}</div>
	{% endfor %}
    {% block form %}
        {{form_start(SearchProductForm)}}

            <div class="d-flex justify-content-center justify-content-between align-items-center">
                {{form(SearchProductForm, {
                    'attr': {
                        'style' : 'width:100%'
                    }
                })}} 
                <button type="submit" class="btn btn-primary" style="margin-bottom:17px; margin-left:10px">Recherche</button>
            </div>

        {{form_end(SearchProductForm)}}
        <br>
        <hr>
        <br>
    {% endblock %}

    <div class="row text-center">        
        {% for product in produits %}
            <div class="col-md-3">
                <div class="card mb-4" style="width: 18rem; ">
                    <h3 class="card-header"> {{product.NAME}} </h3>
                    <img src="{{product.IMAGE}}" alt="Image du produit">
                    <div class="card-body">
                        <p class="card-text text-end fw-bold">{{product.PRICE}}â‚¬</p>
                    </div>
                    <div class="card-body text-end">
                        <a href=" {{path('cart_add', {id: product.id})}}" class="card-link btn btn-primary">Ajouter au panier</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}